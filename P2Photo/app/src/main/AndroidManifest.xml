<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pt.ulisboa.tecnico.meic.cmu.p2photo">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".selectPhotoActivity"/>
        <activity android:name=".settingsActivity" />
        <activity android:name=".chooseCloudLocalActivity" />
        <activity android:name=".AddUser" />
        <activity android:name=".CreateAlbum" />
        <activity android:name=".ActionsMenu" />
        <activity android:name=".addPhotoActivity" />
        <activity android:name=".YourAlbums" />
        <activity android:name=".ListPhoto"/>
        <activity android:name=".FilesActivity" />
        <activity android:name=".addUserFromMainMenu" />
        <activity android:name="addPhotoActivityFromMenu"/>
        <activity android:name=".LogActivity"/>
        <activity android:name=".ConfirmPromptActivity"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dropbox.core.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask">
            <intent-filter>
                <data android:scheme="db-znh1m2wzcegv96c"/>

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>