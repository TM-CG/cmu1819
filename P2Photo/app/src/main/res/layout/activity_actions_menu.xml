<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActionsMenu">

    <Button
        android:id="@+id/createAlbum"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="@string/menu1"
        android:drawableStart="@drawable/baseline_add_to_photos_black_48"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp" />

    <Button
        android:id="@+id/yourAlbums"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="@string/menu2"
        android:drawableStart="@drawable/baseline_photo_album_black_48"
        app:layout_constraintTop_toTopOf="@id/createAlbum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="75dp" />

    <Button
        android:id="@+id/addPhoto"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="@string/menu3"
        android:textAlignment="center"
        android:drawableStart="@drawable/baseline_add_a_photo_black_48"
        app:layout_constraintTop_toTopOf="@id/yourAlbums"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="75dp" />

    <Button
        android:id="@+id/addUsers"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="@string/menu4"
        android:drawableStart="@drawable/baseline_group_add_black_48"
        app:layout_constraintTop_toTopOf="@id/addPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="75dp" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>